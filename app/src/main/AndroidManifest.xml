            android:theme="@style/AppBaseThemeManager" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ConnectionActivity" />
        </activity>
        <activity
            android:name=".view.ConnectionActivity"
            android:label="@string/title_activity_connection" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SearchActivityListView"
            android:label="@string/title_activity_search_activity_list_view"
            android:parentActivityName=".view.ConnectionActivity"
            android:theme="@style/AppBaseThemeSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ConnectionActivity" />
        </activity>
        <activity
            android:name=".view.SearchActivityAnnouncement"
            android:label="@string/title_activity_search_activity_announcement"
