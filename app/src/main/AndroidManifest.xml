<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.henallux.deal_it_version_1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.ProfilActivity"
            android:label="@string/title_activity_profil"
            android:parentActivityName=".view.ConnectionActivity"
            android:theme="@style/AppBaseThemeProfi" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.henallux.deal_it_version_1.view.ConnectionActivity" />
        </activity>
        <activity
            android:name=".view.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".view.ConnectionActivity"
            android:theme="@style/AppBaseThemeSearch" >
